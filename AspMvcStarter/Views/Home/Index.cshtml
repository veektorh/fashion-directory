

@{
    ViewBag.Title = "Homepage";
}

<link href="~/Content/Home.css" rel="stylesheet" />
<link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
<link href="~/Content/owl.theme.default.min.css" rel="stylesheet" />
<script src="~/Scripts/owl.carousel.min.js"></script>

<div class="home_page">

    <div class="header  ">
        <div class="overlay">
            <div class="header_title intro">

                <h1> A Directory of Fashion Entrepeneurs</h1>
                <h2>Our fashion industry network will help you find the professionals you need to grow your business.
</h2>

                <br />
                @if (Request.Cookies["user"] == null)
                {
                    @Html.ActionLink("Get Started", "Login", "Account", null, new { @class = "btn btn-success btn-lg" }) <br /><br />
                }
                else
                {
                    @Html.ActionLink("View Profile", "Profile", "Account", null,null,null, new {username = ViewBag.Username }, new { @class = "btn btn-success btn-lg" }) <br /><br />
                }


            </div>
        </div>

    </div>

    <div class="about_section container">
        <h1 class="text-center ">About Us</h1>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <p class="about_text">
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit. Vel saepe illo modi perspiciatis
                    tenetur nulla non quidem unde officiis reiciendis perferendis vitae eius, laboriosam inventore
                    adipisci aperiam. Iste, provident modi?Saepe doloribus libero laborum id, at nam ipsam asperiores
                    sit voluptas magni illum nostrum tenetur sapiente! Quibusdam quasi porro qui dolorum doloribus alias
                    magni culpa earum nulla voluptatum, omnis hic!
                </p>
            </div>
        </div>
    </div>


    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="content_box">
                        <div class="content_box_icon">
                            <span class="fa fa-exchange fa-4x"></span>
                        </div>
                        <br />
                        <div class="content_box_text">
                            <h3>Online Fashion Directory </h3>
                            <p>Find the professionals you need right in your own 
                            fashion community or seek out new contacts in any city where you want to grow</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="content_box">
                        <div class="content_box_icon">
                            <span class="fa fa-mobile fa-4x"></span>
                        </div>
                        <br />
                        <div class="content_box_text">
                            <h3>Free Business Listing    </h3>
                            <p>Get found online by more customers searching for your services 
                            with an SEO-optimized, public business listing.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="content_box">
                        <div class="content_box_icon">
                            <span class="fa fa-newspaper-o fa-4x"></span>
                        </div>
                        <br />
                        <div class="content_box_text">
                            <h3>Marketing Made Easy </h3>
                            <p>We’ve made it easy to promote your skills, portfolio,
                            social networks, and contact information all in one place.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="featured_section container" >
        <div class="row">
            <h1 class="text-center" style="text-decoration:underline"> Featured Post</h1> <br /><br />
            <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-8 col-md-offset-2">

                <div class="owl-carousel owl-theme ">
                    @foreach (var item in Model)
                    {
                        <div class="item ">
                            <div class="" style="width: 200px;">
                                <a href="@item.Name" target="_blank"> <img class="img-responsive img-thumbnail" style="overflow:hidden; height:auto; width:auto; min-height:200px; min-width:200px; max-height:200px;" src="@item.Name" alt="Card image cap" /></a>
                                <div class="card-block">
                                    <a href="/account/profile?username=@item.User.Username" class="text-center"><h4 class=""> @@@item.User.Username</h4></a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        
    </div>

</div>


<script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 0,
            autoplay:true,
            autoplayTimeout: 3000,
            autoplayHoverPause:true,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                800: {
                    items: 2,
                    nav: false
                },
                1000: {
                    items: 3,
                    nav: true,
                    loop: true
                }
            }
        })
</script>